<div class="welcome-section">
  <h1>Guardian Angel</h1> 
  <h2>Entry</h2> 
</div>

<div class="body">
  <h2>Gratitude List</h2> 
  <% @journal[:data].each do |entry| %>
    <% if entry[:attributes][:date] == @date %>
      <p> <li> <%= entry[:attributes][:entry] %> </li> </p>
    <% end %>
  <% end %>

  <br>
  <h3> Remember... </h3>
  <p> <%= @journal[:data][0][:attributes][:quote][:affirmation]%> </p>

  <% if @journal[:errors] %>
    <div class="alert alert-danger">
      <p> <%= @journal[:errors][1]%> </p>
      <p> <%= @journal[:errors][2]%> </p>
    </div>
  <% end %>
  
  <%= link_to "All Entries", user_journals_path(@user),class: 'btn btn-info' %> </p>
</div>
