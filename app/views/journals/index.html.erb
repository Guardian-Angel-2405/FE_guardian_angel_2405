<div class="welcome-section">
  <h1>Guardian Angel</h1> 

  <h2>Gratitude Entries By Date</h2> 
</div>

<div class="body">

  <% if flash[:error] %>
    <div class="alert alert-danger">
      <%= flash[:error] %>
    </div>
  <% end %>
  
  <% if @journals %>
    <ul class="helplines-list">
      <% @journals[:data].each do |journal| %>
        <p>| <%= journal[:attributes][:date]%> | <%= link_to "Journal Show", user_journal_path(@user, journal[:attributes][:date]),class: 'btn btn-info' %> </p>
      <% end %>
      </ul>
  <% else %>
    <p>No Entries Have Been Made</p>
  <% end %>
  
  <div class="input">
    <%= form_with url: new_user_journal_path, method: :post do |form| %>
      <%= form.label :date, "Date:" %>
      <%= form.date_field :date, required: true%>
      <br>
      <%= form.submit "Select Date", class: "submit" %>
    <% end %>
  </div>
</div>
