
  <div class="welcome-section">
    <h1>Guardian Angel</h1> 
    <h2>Log In</h2> 
  </div>


<div class="container-sm mt-4">
  <div class="w-100 mx-auto" style="max-width: 400px;">
    <%= form_with url: login_path, method: :post, class: "row g-3" do |form| %>
      <div class="col-12">
        <%= form.label :email, "Email:", class: "form-label" %>
        <%= form.email_field :email, required: true, type: "email", class: "form-control" %>
      </div>
      <div class="col-12">
        <%= form.label :password, "Password:", class: "form-label" %>
        <%= form.password_field :password, required: true, minlength: 6, type: "password", class: "form-control" %>
      </div>
      <div class="col-12">
        <%= form.submit "Log In", class: "btn btn-primary" %>
      </div>
    <% end %>
    <div class="col-12 mt-3">
    <%= button_to '/auth/google_oauth2', class: "btn btn-secondary align-items-center justify-content-center", data: { turbo: false } do %>
      <%= image_tag 'Google_Sign_In.jpeg', alt: 'Google Logo', class: 'me-1', style: 'height: 20px;' %>
      Continue With Google
    <% end %>
    </div>
  </div>
</div>